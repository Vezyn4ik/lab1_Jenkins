pipeline {
 agent any
 
  stages {
     stage('checkout') {
       steps {
         git branch: 'main', url: 'https://your_github/lab1.git'
         }
       }
     stage('terraform action') {
       steps {
         echo "Terraform action is --> ${action}"
         echo "Terraform folder is --> ${folder}"
         sh '''
         cd ${folder}
         ls
         terraform init
         terraform plan
         terraform ${action} -auto-approve '''
       }
     }
  }
}
